<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:orientation="vertical"
    tools:context="ru.isu.swa.diplom.view.GroupActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="0dp"
        android:layout_weight="0"
        android:background="@color/colorPrimaryDark"
        android:elevation="4dp"
        app:subtitleTextColor="@color/md_white_1000"
        app:titleMargin="0dp"
        app:titleTextColor="@color/md_white_1000" />

    <TextView
        android:id="@+id/groupInfo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/md_black_1000"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/showAdminLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center_vertical|center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/showAdmin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/md_black_1000"
            android:text="Показать администраторов"
            tools:text="Показать администраторов" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/groupMemberRView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:scrollbars="vertical" />
    <LinearLayout
        android:id="@+id/showChat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:gravity="center_vertical|center"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/md_black_1000"
            android:textSize="18sp"
            android:text="Открыть чат"
            tools:text="Открыть чат" />
</LinearLayout>
</LinearLayout>
